{{#if profileUser}}
<div class="row mt-4 mb-4 " style="
    margin-left: 0;
    margin-right: 0;
">
    <div class="col-3"></div>
    <div class="col-6">
        <form method="POST" action="/users/updateProfile" id="frmUtProfile">
            <div class="form-group" style="margin-top: 50px;">
                <label for="name">FullName</label>
                <input type="text" class="form-control" id="name" value="{{profileUser.Name}}" name="name">
            </div>

            <div class="form-group">
                <label for="username">PenName</label>
                <input type="text" class="form-control" value="{{profileUser.PenName}}" id="username" name="PenName">
            </div>
            <input type="hidden" class="form-control" name="idUser" id="idUser" value="{{profileUser.UserID}}">

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" value="{{profileUser.Password}}"
                    name="password">
            </div>
            <div class="form-group">
                <label class="form-check-label" for="email">Email</label>
                <input type="email" class="form-control" value="{{profileUser.Email}}" id="email" name="email">
            </div>

            <div class="form-group">
                <label for="birthDay">Birth Day</label>
                <input type="text" class="form-control" id="birthDay" name="birthDay" value="{{profileUser.BirthDay}}">
            </div>
            <div style="text-align: center;cursor:pointer;margin-bottom: 100px;">
                <button class="btn btn-primary">Done </button>
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>
{{/if}}

{{#section 'js'}}

<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

<script>
    $('#birthDay').datetimepicker({
        format: 'd/m/Y',
        timepicker: false,
        mask: true
    })
</script>

{{/section}}

