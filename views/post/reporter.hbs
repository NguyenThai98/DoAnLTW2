<div class="reporter text-center">
    <div class="vietbai">
        <h3>| Đăng Bài</h3>
        <div class="container">
            <div class="row">
                <div class="col">
                    <form action="/post/phongvien" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" class="form-control" id="tieudeBV" aria-describedby="emailHelp"
                                name="NewsTitle" placeholder="Tiêu Đề Bài Viết . . .">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="tomtatBV" aria-describedby="emailHelp"
                                name="Abstract" placeholder="Nội Dung Tóm Tắt . . .">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="noidungBV" aria-describedby="emailHelp"
                                name="Content" placeholder="Nội Dung Chính . . .">
                        </div>
                        <div class="form-group">
                            <label class="text-left" for="Avartar" style="width: 100%;">Hình Đại Diện Bài Viết</label>
                            <input type="file" class="form-control" id="Avartar" aria-describedby="emailHelp"
                                name="Avartar">
                        </div>
                        <div class="form-group">
                            <select class="form-control" id="exampleFormControlSelect1" name="loaiBaiViet">
                                <option>Không mất phí</option>
                                <option>Mất phí</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="tacgia" aria-describedby="emailHelp"
                                name="tacgia" value={{idUser}}>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="ngaydang" aria-describedby="emailHelp"
                                name="ngaydang" placeholder="Ngày Đăng . . .">
                        </div>
                        <button type="submit" style="
    width: 100%;
" class="btn btn-primary mt-4 mb-4">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="dsbaiviet">
        <h3>| Danh Sách Bài Viết</h3>
        <div class="container">
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Tên Bài Viết</th>
                            <th scope="col">Tình Trạng</th>
                            <th scope="col">Chỉnh Sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr>
                            <td> {{NewsTitle}} </td>
                            <td> {{Status}} </td>
                            <td>
                                {{#if isDel}}
                                <a name="editBV" class="btn btn-warning editBV" href="/post/edit/{{NewsID}}" title="Edit" role="button">
                                    <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                </a>
                                {{else}}
                                <a name="editBV" class="btn btn-warning editBV" title="Not Edit"
                                    href="javascript:void(0)" role="button">
                                    <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                </a>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/wc2zes0u5j2hxklaov2xxoswv6griqgeb3tzkqfotvmf4yjp/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    tinymce.init({
        selector: '#noidungBV',
        height: 200,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
        ],
    });
    tinymce.init({
        selector: '#editnoidungBV',
        height: 200,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
        ],
    });
</script>

<script>
    $('#ngaydang').datetimepicker({
        format: 'd/m/Y',
        timepicker: false,
        mask: true
    })
    $('#editngaydang').datetimepicker({
        format: 'd/m/Y',
        timepicker: false,
        mask: true
    })
</script>

{{/section}}
