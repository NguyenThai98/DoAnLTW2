<div class="container">
    {{#each detailsPost}}
    <div class="text-center">
        <a class="btn btn-warning " href="/editor" role="button">Quản Lý Danh Sách Bài Viêt</a>
    </div>
    <h3 class="mt-4 mb-4 text-center">| {{CatName}} |</h3>

    <div class="row">
        <div class="col-12">
            <div class="details-categories">
                <div class="details-img">
                    <a href="#"><img src="/public/assets/images/{{Avatar}}"> </a>
                </div>
                <div class="details-content">
                    <div class="ct-title font-weight-bold">
                        {{NewsTitle}}
                    </div>
                    <div class="ct-date">
                        {{DatePost}}
                    </div>
                    <div class="ct-content ">
                        {{{Content}}}
                    </div>
                    <div class="ct-tag font-weight-bold">
                        #{{TagName}}
                    </div>
                </div>
            </div>
            <a class="btn btn-success w-100 mb-4 mt-4" href="javascript: $('#frmconfirm').submit()" role="button">Duyệt
                Bài</a>
            <a class="btn btn-danger w-100 mb-4" href="javascript: $('#frmcancel').submit()" role="button">Từ Chối</a>
        </div>
    </div>
    <form id="frmconfirm" action="/editor/confirm" method="POST">
        <input type="hidden" name="NewsID" value={{NewsID}}>
    </form>
    <form id="frmcancel" action="/editor/cancel" method="POST">
        <input type="hidden" name="NewsID" value={{NewsID}}>
    </form>
    {{/each}}

</div>